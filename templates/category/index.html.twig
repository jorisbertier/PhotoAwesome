{% extends 'base.html.twig' %}

{% block title %}Hello CategoryController!{% endblock %}

{% block body %}
{{ form_start(form) }}
    {{ form_row(form.categoryTitle) }}
    <button type="submit">Rechercher</button>
{{ form_end(form) }}
<ul>
{% for category in categories %}
<a href="{{ path('app_category_show', {'id': category.id}) }}"><li>{{ category.label }}</li></a>
<li><a href="{{ path('app_category_edit', {'id': category.id}) }}" >Update</a></li>
{% endfor %}
</ul>
{% endblock %}
